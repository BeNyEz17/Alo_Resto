{% extends 'base.html.twig' %}

{% block title %}Choix des plats!{% endblock %}

{% block body %}
 <h1>Les commandes en cours</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Secteur</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.date | date('d/m/y h:m:s')}}</td>
                <td>{{ commande.secteur }}</td> 
            </tr>
        {% endfor %}

        <th>Restaurant</th>
        
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.nom }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

