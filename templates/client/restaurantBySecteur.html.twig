{% extends 'base.html.twig' %}

{% block title %}Hello repas!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 <h1>Voici les restaurants pour le secteur de : {{restaurantBySecteur.libelle}}</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurantBySecteur.restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nom }}</td>
                <td>{{ restaurant.Adresse }}</td>
                <td>{{ restaurant.Ville }}</td>
            </tr>
        {% endfor %}
     </tbody>
    </table>
</div>
{% endblock %}
