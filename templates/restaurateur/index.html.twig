            <tr>
                <th>nom du restaurant</th>
                <th>adresse du restaurant</th>
                <th>type du restaurant</th>
                <th>nom du restauranteurs</th>
            </tr>
        </thead>
        <tbody>
   {% for restaurateur in restaurateurs %}

        <td>{{restaurateur.nom}}</td>
        <td>{{restaurateur.adresse}}</td>

