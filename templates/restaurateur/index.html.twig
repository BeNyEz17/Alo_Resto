{% extends 'base.html.twig' %}

{% block title %}Interface Restaurateur{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vous Etes sur l'interface Restaurateur !</h1>
<ul>
    {% for restaurateur in restaurateurs %}
        <li>
            {{restaurateur.id}} - {{restaurateur.nom}} - {{restaurateur.adresse}} - {{restaurateur.plats}} - {{restaurateur.user}}
            - <a href ="{{ path ('app_restaurateur_view', {'id' : restaurateur.plats}) }}" > afficher tout les plats </a> 
        </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}